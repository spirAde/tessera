{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2021",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts", "src/index.d.ts", "src/types/*.js"],
}
