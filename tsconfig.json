{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2021",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "incremental": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/index.d.ts", "src/types/*.js", "src/workers/*.ts"]
}
